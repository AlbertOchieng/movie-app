<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deadpool"
    tools:context="com.example.albertzkiki.movieapp.Signin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerInParent="true"
        >

        <com.rengwuxian.materialedittext.MaterialEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phnnumber"
            android:hint="@string/phnHint"
            android:textColorHint="@color/red"
            android:text="@string/myphon"
            android:inputType="phone"
            android:textSize="25dp"
            android:fontFamily="sans-serif-smallcaps"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="10"
            app:met_primaryColor="@color/white"
            app:met_singleLineEllipsis="true"
            />



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:hint="@string/passHint"
            android:textColorHint="@color/red"
            android:text="@string/myPass"
            android:inputType="numberPassword"
            android:textSize="25dp"
            android:fontFamily="sans-serif-smallcaps"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="30"
            app:met_primaryColor="@color/white"
            app:met_singleLineEllipsis="true"
            />


        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ckb_remeber"
            android:text="@string/remember_me"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            style="@style/Material.Drawable.CheckBox"
            app:cbd_strokeColor="@color/white"
            app:cbd_tickColor="@color/white"
            android:layout_marginTop="8dp"

            />


    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:id="@+id/btnlogin"
        fancy:fb_text="Sign In"
        fancy:fb_defaultColor="#a70606"
        fancy:fb_borderWidth="1dp"
        fancy:fb_radius="5dp"
        >

    </mehdi.sakout.fancybuttons.FancyButton>

</RelativeLayout>
