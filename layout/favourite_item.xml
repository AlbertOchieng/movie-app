<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/menu_item"
    app:cardElevation="10dp"
    android:layout_margin="8dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_backgroundFav"
        android:background="@color/bgRowBackgrounf"
        android:layout_margin="8dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/deleteFav"
            android:src="@drawable/ic_delete_white"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/deleteFav"
            android:textSize="13dp"


            />



    </RelativeLayout>

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_forwardFav"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="8dp"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_bg_bd_glow"
            android:scaleType="centerCrop"
            android:id="@+id/movie_imageFAV"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"

            >

            <TextView
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/movie_nameFAV"
                android:text="Name of the Movie"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"

                />


        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>